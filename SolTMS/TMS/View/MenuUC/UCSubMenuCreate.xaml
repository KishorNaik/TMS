<UserControl x:Class="TMS.View.MenuUC.UCSubMenuCreate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="UserControl"
             d:DesignHeight="400"
             d:DesignWidth="320"
             mc:Ignorable="d">

    <Grid x:Name="LayoutRoot">
        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    Style="{StaticResource SubMenuStackPanelStyle}">
            <Button Content="Transport" Style="{StaticResource SubMenuButtonStyle}" />
            <Button Content="Consignment" Style="{StaticResource SubMenuButtonStyle}" />
            <Button Content="Dispatch" Style="{StaticResource SubMenuButtonStyle}" />
            <Button Content="POD" Style="{StaticResource SubMenuButtonStyle}" />
        </StackPanel>
    </Grid>
</UserControl>